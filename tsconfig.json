{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "./",
    "paths": {
      "~/*": ["packages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}